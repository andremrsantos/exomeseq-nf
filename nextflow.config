// Environment Variable for JAVA RUNTIME
env.LC_ALL="en_US.utf8"

// default parameters
params {
    project = "exomeseq"
    cpus    = 4
    memory  = "8G"
    outdir  = "/data/public/${USER}/${params.project}"
    time    = 240.h
    references {
        b37 {
            dbsnp = "/data/rsc/b37/dbsnp_150.b37.vcf.gz"
            mills = "/data/rsc/b37/Mills_and_1000G_gold_standard.indels.b37.sites.vcf.gz"
            kgp3 = "/data/rsc/b37/1000G_phase1.indels.b37.sites.vcf.idx.gz.md5"
            omni = "/data/rsc/b37/1000G_omni2.5.b37.sites.vcf.gz"
            hapmap = "/data/rsc/b37/hapmap_3.3.b37.sites.vcf.gz"
            axiom = "Axiom_Exome_Plus.genotypes.all_populations.poly.vcf.gz"
            dbnsfp = "/data/rsc/dbnsfp/dbNSFP2.9.3.txt.gz"
            clinvar = "/data/rsc/clinvar/hg19/clinvar_20171029.vcf.gz"
        },
        hg19 {
            dbsnp = "/data/rsc/hg19/dbsnp_138.hg19.vcf.gz"
            mills = "/data/rsc/hg19/Mills_and_1000G_gold_standard.indels.hg19.sites.vcf.gz"
            kgp3 = "/data/rsc/hg19/1000G_phase1.indels.hg19.sites.vcf.idx.gz.md5"
            omni = "/data/rsc/hg19/1000G_omni2.5.hg19.sites.vcf.gz"
            hapmap = "/data/rsc/hg19/hapmap_3.3.hg19.sites.vcf.gz"
            axiom = false
            dbnsfp = "/data/rsc/dbnsfp/dbNSFP2.9.3.txt.gz"
            clinvar = "/data/rsc/clinvar/hg19/clinvar_20171029.vcf.gz"
        }
    }
}


// pipeline process
timeline {
    file = "${params.outdir}/nf-timeline.html"
}

trace {
    file = "${params.outdir}/nf-trace.html"
}

// Default Databases Reference Map


// Execution parameters
process {
    cpus = params.cpus
    time = params.time
    memory = params.memory
    scratch = "/tmp/"
}

profiles {
    standard {
        process.executor = 'local'
    }

    cluster {
        process.executor = 'pbs'
    }
}

// docker execution parameters
docker {
    enabled    = true
    temp       = 'auto'
    runOptions = "-v ${params.pwd}:${params.pwd}"
}
